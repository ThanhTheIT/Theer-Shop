  <header class="section-header">
     <section class="header-main border-bottom bg-light py-3 shadow-sm">
         <div class="container">
             <div class="row align-items-center">
                 <!-- Logo -->
                 <div class="col-lg-3 col-md-4 col-12 text-start">
                     <a href="~/Home" class="brand-wrap text-decoration-none">
                         <h1 class="h4 fw-bold m-0 " style="color: orange">✨ THEER Shop</h1>
                     </a>
                 </div>

                
                 <!-- User widgets -->
                 <div class="col-lg-6 col-md-8 d-flex justify-content-end align-items-center">
                    <div class="widget-header ms-4">
                        <a href="~/Home/Support" class="widget-view text-decoration-none d-flex align-items-center">

                            <i class="fa fa-shopping-cart  fs-5">Hỗ trợ</i> 
                        </a>
                    </div>
                        
                        
                     @{
                         var user = User.GetUserData();
                         if (user != null)
                         {
                           
                             <!-- Giỏ hàng -->
                             <div class="widget-header ms-4">
                                 <a href="~/Cart/index" class="widget-view text-decoration-none d-flex align-items-center">
                                  
                                         <i class="fa fa-shopping-cart  fs-5">Giỏ hàng</i>
                                    
                                     
                                 </a>
                             </div>

                             <!-- Tên người dùng -->
                             <div class="widget-header ms-4">
                                 <a class="text-dark fw-bold d-flex align-items-center text-decoration-none dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user"></i>
                                     <span class="ms-2">@user.DisplayName</span>
                                 </a>
                                 <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3" aria-labelledby="userDropdown">
                                     <li><a class="dropdown-item" href="~/Home/Edit?customerID=@user.UserId">Cập nhật thông tin</a></li>
                                     <li><a class="dropdown-item" href="~/Account/ChangePassword">Đổi mật khẩu</a></li>
                                     <li><a class="dropdown-item" href="~/Cart/IndexHistory">Lịch sử mua hàng</a></li>
                                     <li><hr class="dropdown-divider"></li>
                                     <li><a class="dropdown-item text-danger" href="~/Account/Logout">Đăng xuất</a></li>
                                 </ul>
                             </div>
                         }
                         else
                         {
                             <a href="~/Account/Login" class="btn btn-primary fw-bold px-4">
                                 Đăng nhập
                             </a>
                         }
                     }
                 </div>
             </div>
         </div>
     </section>
 </header>

 <!-- Bootstrap 5 Script -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>


