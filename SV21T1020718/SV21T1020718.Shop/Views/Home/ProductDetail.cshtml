<div class="container my-5">
    <div class="row">
        <!-- Phần hình ảnh sản phẩm -->
        <aside class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="gallery-wrap p-3">
                    <div class="img-big-wrap">
                        <a href="~/images/products/@Model.Photo" target="_blank">
                            <img src="~/images/products/@Model.Photo" class="img-fluid rounded" alt="@Model.ProductName">
                        </a>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Phần thông tin sản phẩm -->
        <main class="col-md-6">
            <div class="product-info-aside">
                <!-- Tên sản phẩm -->
                <h2 class="title mt-3 text-primary">@Model.ProductName</h2>

                <!-- Giá bán -->
                <div class="mb-3">
                    <p class="h4 text-danger">
                        Giá bán: <span>@Model.Price.ToString("N0") VNĐ</span>
                    </p>
                </div>

                <!-- Mô tả sản phẩm -->
                <div class="mb-4">
                    <p class="text-muted">
                        Mô tả: <br>@Model.ProductDescription
                    </p>
                </div>

                <!-- Chọn số lượng -->
                <div class="mb-4">
                    <label for="quantity" class="form-label fw-bold">Số lượng:</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control" style="width: 100px;">
                </div>

                <!-- Nút thêm vào giỏ hàng -->
                <div class="d-grid gap-2 d-md-block">
                    <a href="~/Cart/AddToCart?productID=@Model.ProductID&quantity=1" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                    </a>
                    <a href="~/Home" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </main>
    </div>
</div>
