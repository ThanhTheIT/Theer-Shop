@model SV21T1020718.DomainModels.Customer
@{

}

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Account/Save" method="post">

            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId" />

            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CustomerName)" value="@Model.CustomerName">
                @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>

            <div class="form-group" name="@nameof(Model.Province)">
                <label>Tỉnh/Thành:</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">--Chọn Tỉnh/Thành--</option>
                    @foreach (var province in SV21T1020718.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option selected value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>
            <div class="form-group">
                <label>Mật khẩu:</label>
                <input type="password" class="form-control" name="password" >
               
            </div>
            <div class="form-group">
                <label>Xác nhận lại mật khẩu:</label>
                <input type="password" class="form-control" name="confirmpass">
               
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>

            </div>
            @Html.ValidationMessage("Error")

        </form>

    </div>
</div>