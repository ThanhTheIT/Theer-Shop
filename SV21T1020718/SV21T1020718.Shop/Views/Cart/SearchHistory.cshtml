@model SV21T1020718.Shop.Models.OrderSearchResult
@{
    Layout = null;
}

    <div class="container py-4">
        <p class="mb-3">
            Có <strong>@Model.RowCount</strong> đơn hàng trong tổng số <strong>@Model.PageCount</strong> trang.
        </p>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Khách hàng</th>
                                <th>Ngày lập</th>
                                <th>Nhân viên phụ trách</th>
                                <th>Thời điểm duyệt</th>
                                <th>Người giao hàng</th>
                                <th>Ngày nhận giao hàng</th>
                                <th>Thời điểm kết thúc</th>
                                <th>Trạng thái</th>
                                <th class="text-center" style="width: 40px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* Hiển thị danh sách đơn hàng *@
                            @* Vòng lặp lấy dữ liệu từ Model *@
                            <tr>
                                <td>Phạm Thành Thể</td>
                                <td>03/01/2025 8:00</td>
                                <td>Lê Đức Dũng</td>
                                <td>04/01/2025 8:00</td>
                                <td>Giao hàng tiết kiệm</td>
                                <td>04/01/2025 10:30</td>
                                <td>04/01/2025 16:00</td>
                                <td>Đơn hàng chưa được duyệt</td>
                                <td class="text-center">
                                    <a href="~/Order/Details/" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Phân trang -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="javascript:;" onclick="doSearch(@p)">@p</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Thêm JavaScript nếu cần
        function doSearch(page) {
            console.log("Search page: " + page);
            // Thực hiện tìm kiếm hoặc chuyển trang
        }
    </script>
