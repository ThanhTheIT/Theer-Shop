@model SV21T1020718.Shop.Models.OrderSearchInput
@{
    decimal Total = 0;
}

    <div class="container py-4">
        <h2 class="mb-4">Quản lý đơn hàng</h2>

        <!-- Form tìm kiếm -->
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <form id="frmSearchInput" method="get" class="row g-3">
                    <div class="col-md-2">
                        <select class="form-select" name="@nameof(Model.Status)">
                            <option value="">--Trạng Thái--</option>
                            <!-- Thêm các tùy chọn trạng thái -->
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="text" name="@nameof(Model.TimeRange)" value="@Model.TimeRange"
                               class="form-control daterange-picker" placeholder="Khoảng thời gian">
                    </div>
                    <div class="col-md-8">
                        <div class="input-group">
                            <input type="text" name="@nameof(Model.SearchValue)" value="@Model.SearchValue"
                                   class="form-control" placeholder="Tìm kiếm theo tên khách hàng hoặc người giao hàng">
                            <button type="submit" id="search-btn" class="btn btn-info">
                                <i class="fa fa-search"></i> Tìm kiếm
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Kết quả tìm kiếm -->
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="mb-3">
                    Có <strong>1</strong> đơn hàng trong tổng số <strong>1</strong> trang.
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Khách hàng</th>
                                <th>Ngày lập</th>
                                <th>Nhân viên phụ trách</th>
                                <th>Thời điểm duyệt</th>
                                <th>Người giao hàng</th>
                                <th>Ngày nhận giao hàng</th>
                                <th>Thời điểm kết thúc</th>
                                <th>Trạng thái</th>
                                <th class="text-center" style="width: 40px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* Vòng lặp để hiển thị danh sách đơn hàng *@
                            <tr>
                                <td>Phạm Thành Thể</td>
                                <td>03/01/2025</td>
                                <td>Lê Đức Dũng</td>
                                <td>04/01/2025 8:00</td>
                                <td>Giao hàng tiết kiệm</td>
                                <td>04/01/2025 10:30</td>
                                <td>04/01/2025 16:00</td>
                                <td>Đơn hàng chưa được duyệt</td>
                                <td class="text-center">
                                    <a href="~/Order/Details/" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
